<!-- books.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Books</title>
    <link rel="stylesheet" href="../public/css/style.css">
</head>
<center>
<body>
    <h1>Books</h1>
    <table>
        <tr>
            <td>Title</td>
            <td>Author</td>
            <td>Actions</td>
        </tr>
        <% for(var i=0; i < books.length; i++) { %>
            <tr>
                <td><%= books[i].title %></td>
                <td><%= books[i].author %></td>
                <td>
                    <a href="/book/<%= books[i].id %>">View</a>
                    <a href="/update/<%= books[i].id %>">Edit</a>
                    <a href="/delete/<%= books[i].id %>">Delete</a>
                </td>
            </tr>
        <% } %>
    </table>
    <a href="/create">Create New Book</a>
</body> 
</center>
</html>